{
  "manifest_version": 3,
  "name": "Transcribe",
  "version": "1.0",
  "description": "Transcribe using param.codes",
  "action": {
    "default_title": "Click to get transcription"
  },
  "host_permissions": [
    "https://www.transcribe.param.codes/*",
    "https://transcribe.param.codes/*"
  ],
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "scripts/background.js"
  }
}
